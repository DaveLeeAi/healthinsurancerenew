---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getBreadcrumbSchema } from '../lib/schema';
import config from '../data/config.json';

const schemas = [
  getBreadcrumbSchema([{ name: 'Home', url: '/' }]),
];

const guides = [
  {
    title: 'Individual & Family Health Insurance',
    description: 'A comprehensive overview of ACA marketplace coverage options for individuals and families.',
    url: '/guides/individual-family-health-insurance',
  },
  {
    title: 'Open Enrollment 2026',
    description: 'Key dates, steps, and what to expect during the annual enrollment window.',
    url: '/guides/open-enrollment-2026',
  },
  {
    title: 'How ACA Subsidies Work in 2026',
    description: 'Understand premium tax credits and cost-sharing reductions that can lower your costs.',
    url: '/guides/how-aca-subsidies-work-2026',
  },
];

const tools = [
  {
    title: 'Income & Savings Calculator',
    description: 'Estimate how your household income may affect ACA marketplace subsidies.',
    url: '/tools/income-savings-calculator',
  },
  {
    title: "Job Plan Affordability Check",
    description: 'See whether employer coverage meets ACA affordability standards.',
    url: '/tools/job-plan-affordability',
  },
  {
    title: 'What Income Counts',
    description: 'Learn how Modified Adjusted Gross Income is calculated for ACA purposes.',
    url: '/tools/what-income-counts',
  },
  {
    title: 'Compare Plan Levels',
    description: 'Explore differences between Bronze, Silver, Gold, and Platinum tiers.',
    url: '/tools/plan-comparison',
  },
];

const heroTools = [
  {
    title: 'Income & Savings Calculator',
    description: 'Estimate how income may affect your ACA marketplace premium tax credits.',
    url: '/tools/income-savings-calculator',
    icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  },
  {
    title: 'Affordability Check',
    description: 'Check whether your employer plan meets ACA affordability standards.',
    url: '/tools/job-plan-affordability',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  },
  {
    title: 'State Finder',
    description: 'Get state-specific information for your ACA marketplace enrollment.',
    url: '/states',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  },
];
---
<BaseLayout
  title="HealthInsuranceRenew | Understand Your ACA Health Insurance Options"
  description="Educational ACA health insurance resource. Learn about marketplace plans, subsidies, enrollment periods, and compare coverage options. Licensed agents in 18 states."
  schemas={schemas}
>
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-primary-900">
    <div class="absolute inset-0 opacity-[0.07]" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.3) 1px, transparent 0); background-size: 32px 32px;"></div>
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary-500/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/3"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-primary-400/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/4"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 sm:pt-20 pb-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-heading mb-4 tracking-tight">
          Check Your 2026 Health Insurance Options
        </h1>
        <h2 class="text-lg sm:text-xl text-slate-200 font-normal leading-relaxed">
          Simple tools and guides to help you understand eligibility and next steps.
        </h2>
        <div class="flex flex-wrap justify-center gap-4 mt-8">
          <a href="/contact" class="relative z-20 inline-flex items-center px-6 py-3 rounded-xl bg-white text-slate-900 font-semibold hover:bg-slate-50 transition-colors shadow-lg shadow-black/10">
            Get Help
          </a>
          <a href="/tools" class="relative z-20 inline-flex items-center px-6 py-3 rounded-xl bg-white/10 backdrop-blur-md text-white font-semibold border border-white/20 hover:bg-white/20 transition-colors">
            Tools
          </a>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-5 pb-8">
        {heroTools.map((tool) => (
          <a
            href={tool.url}
            class="group block rounded-2xl bg-white/[0.08] backdrop-blur-lg border border-white/[0.15] p-6 shadow-2xl hover:bg-white/[0.14] hover:border-white/25 hover:shadow-xl transition-all duration-300"
          >
            <div class="w-11 h-11 rounded-xl bg-primary-500/20 text-primary-200 flex items-center justify-center mb-4 group-hover:bg-primary-500/30 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={tool.icon}/>
              </svg>
            </div>
            <h3 class="text-white font-semibold text-base mb-1.5">{tool.title}</h3>
            <p class="text-slate-300 text-sm leading-relaxed">{tool.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-2xl font-bold text-slate-900 mb-2 leading-heading">Educational Guides</h2>
    <p class="text-slate-600 mb-8">Clear, unbiased information about how ACA health insurance works.</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {guides.map((guide) => (
        <a href={guide.url} class="group block p-6 rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300">
          <h3 class="text-lg font-semibold text-slate-800 group-hover:text-primary-600 transition-colors mb-2">{guide.title}</h3>
          <p class="text-sm text-slate-600 font-serif leading-relaxed">{guide.description}</p>
          <span class="inline-flex items-center gap-1 text-sm text-primary-600 font-semibold mt-4 group-hover:gap-2 transition-all">
            Read guide
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
      ))}
    </div>
  </section>

  <section class="bg-slate-50 border-y border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <h2 class="text-2xl font-bold text-slate-900 mb-2 leading-heading">Free Tools & Calculators</h2>
      <p class="text-slate-600 mb-8">Educational tools to help you estimate costs and compare options.</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {tools.map((tool) => (
          <a href={tool.url} class="group block p-5 rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300">
            <h3 class="font-semibold text-slate-800 group-hover:text-primary-600 transition-colors mb-1.5">{tool.title}</h3>
            <p class="text-sm text-slate-600 font-serif">{tool.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-2xl font-bold text-slate-900 mb-2 leading-heading">Licensed agents are available in 18 states.</h2>
    <p class="text-slate-600 mb-8">Select your state to see local health insurance information and enrollment details.</p>
    <div class="grid grid-cols-3 sm:grid-cols-6 lg:grid-cols-9 gap-3">
      {config.licensedStates.map((state) => (
        <a
          href={`/states/${state.slug}`}
          class="flex flex-col items-center justify-center p-3 rounded-xl bg-white border border-slate-200 hover:border-primary-300 hover:shadow-lg transition-all duration-200 group"
        >
          <span class="text-lg font-bold text-slate-700 group-hover:text-primary-600 transition-colors">{state.abbr}</span>
          <span class="text-xs text-slate-500 mt-0.5">{state.name}</span>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
