---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getBreadcrumbSchema } from '../../lib/schema';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Tools', url: '/tools' },
];

const schemas = [getBreadcrumbSchema(breadcrumbs)];

const tools = [
  {
    title: 'Estimate Your Savings',
    description: 'See how your income could lower your monthly health insurance costs.',
    url: '/tools/income-savings-calculator',
    icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  },
  {
    title: 'Does My Employer Plan Count?',
    description: 'Find out if your job-based health plan is considered affordable under ACA rules.',
    url: '/tools/job-plan-affordability',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  },
  {
    title: 'What Income Counts?',
    description: 'Learn which types of income the marketplace uses to figure out your savings.',
    url: '/tools/what-income-counts',
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  },
  {
    title: 'Compare Plan Levels',
    description: 'See the differences between Bronze, Silver, Gold, and Platinum plans side by side.',
    url: '/tools/plan-comparison',
    icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10',
  },
  {
    title: 'Check for Extra Savings on Silver Plans',
    description: 'See if you qualify for lower copays, deductibles, and out-of-pocket costs on a Silver plan.',
    url: '/tools/csr-estimator',
    icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    title: 'Estimate Your Family\'s Costs',
    description: 'See what your whole family might pay each month across all plan levels.',
    url: '/tools/family-coverage-estimator',
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  },
];
---
<BaseLayout
  title="Free Health Insurance Tools | HealthInsuranceRenew"
  description="Free tools to estimate your health insurance savings, check employer plan affordability, compare plan levels, and see what your family might pay. No sign-up required."
  schemas={schemas}
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <Breadcrumbs items={breadcrumbs} />
    <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 leading-heading mb-4">Free Health Insurance Tools</h1>
    <p class="text-lg text-slate-600 mb-8 max-w-2xl font-serif">
      Answer a few simple questions and get a quick estimate. No account needed. These tools give general estimates for learning purposes only.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {tools.map((tool) => (
        <a
          href={tool.url}
          class="group block p-6 rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300"
        >
          <div class="w-12 h-12 rounded-xl bg-primary-50 text-primary-600 flex items-center justify-center mb-4 group-hover:bg-primary-100 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={tool.icon}/>
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-slate-800 group-hover:text-primary-600 transition-colors mb-2">{tool.title}</h2>
          <p class="text-sm text-slate-600 font-serif">{tool.description}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
