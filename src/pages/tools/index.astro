---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getBreadcrumbSchema } from '../../lib/schema';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Tools', url: '/tools' },
];

const schemas = [getBreadcrumbSchema(breadcrumbs)];

const tools = [
  {
    title: 'Health Insurance Income & Savings Calculator',
    description: 'Estimate how your household income affects ACA marketplace subsidies and potential savings.',
    url: '/tools/income-savings-calculator',
    icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
  },
  {
    title: "Is My Job's Health Plan Affordable?",
    description: 'Check whether your employer health plan meets ACA affordability standards.',
    url: '/tools/job-plan-affordability',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  },
  {
    title: 'What Income Counts for Health Insurance?',
    description: 'Understand how Modified Adjusted Gross Income (MAGI) is calculated for ACA purposes.',
    url: '/tools/what-income-counts',
    icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  },
  {
    title: 'Compare Bronze, Silver & Gold Plans',
    description: 'Explore the differences between ACA metal tier plans and find the right fit.',
    url: '/tools/plan-comparison',
    icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10',
  },
];
---
<BaseLayout
  title="Health Insurance Tools & Calculators | HealthInsuranceRenew"
  description="Free educational health insurance tools and calculators. Estimate subsidies, check employer plan affordability, understand income counting, and compare plan levels."
  schemas={schemas}
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <Breadcrumbs items={breadcrumbs} />
    <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 leading-heading mb-4">Health Insurance Tools</h1>
    <p class="text-lg text-slate-600 mb-8 max-w-2xl font-serif">
      Free educational tools to help you understand your health insurance options. These calculators provide general estimates for learning purposes only.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {tools.map((tool) => (
        <a
          href={tool.url}
          class="group block p-6 rounded-2xl bg-white border border-slate-200 shadow-sm hover:shadow-lg hover:border-primary-300 transition-all duration-300"
        >
          <div class="w-12 h-12 rounded-xl bg-primary-50 text-primary-600 flex items-center justify-center mb-4 group-hover:bg-primary-100 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={tool.icon}/>
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-slate-800 group-hover:text-primary-600 transition-colors mb-2">{tool.title}</h2>
          <p class="text-sm text-slate-600 font-serif">{tool.description}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
