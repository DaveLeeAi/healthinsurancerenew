---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import AuthorBio from '../../components/AuthorBio.astro';
import LastUpdated from '../../components/LastUpdated.astro';
import { getBreadcrumbSchema, getArticleSchema } from '../../lib/schema';

export async function getStaticPaths() {
  const entries = await getCollection('faq');
  return entries.map((entry) => {
    const slug = entry.id.replace(/\.md$/, '');
    return {
      params: { slug },
      props: { entry, slug },
    };
  });
}

const { entry, slug } = Astro.props;
const { Content } = await render(entry);
const { title, description, datePublished, dateModified } = entry.data;

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'FAQ', url: '/faq' },
  { name: title, url: `/faq/${slug}` },
];

const schemas = [
  getBreadcrumbSchema(breadcrumbs),
  getArticleSchema({ title, description, url: `/faq/${slug}`, datePublished, dateModified }),
];
---
<BaseLayout title={`${title} | HealthInsuranceRenew`} description={description} schemas={schemas}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <Breadcrumbs items={breadcrumbs} />
    <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 leading-heading mb-4">{title}</h1>
    <LastUpdated date={dateModified} />
    <div class="prose prose-slate max-w-none prose-headings:font-bold prose-headings:text-slate-900 prose-a:text-primary-600 hover:prose-a:text-primary-700 font-serif">
      <Content />
    </div>
    <AuthorBio />
  </article>
</BaseLayout>
