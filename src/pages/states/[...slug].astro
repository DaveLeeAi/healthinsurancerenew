---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import AnswerBox from '../../components/AnswerBox.astro';
import AuthorBio from '../../components/AuthorBio.astro';
import LastUpdated from '../../components/LastUpdated.astro';
import FAQSection from '../../components/FAQSection.astro';
import SourcesBox from '../../components/SourcesBox.astro';
import { getBreadcrumbSchema, getArticleSchema, getFAQSchema } from '../../lib/schema';

export async function getStaticPaths() {
  const entries = await getCollection('states');
  return entries.map((entry) => {
    const slug = entry.id.replace(/\.md$/, '');
    return {
      params: { slug },
      props: { entry, slug },
    };
  });
}

const { entry, slug } = Astro.props;
const { Content } = await render(entry);
const { title, description, stateName, stateAbbr, exchange, datePublished, dateModified, faqs } = entry.data;

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'States', url: '/states' },
  { name: stateName, url: `/states/${slug}` },
];

const schemas = [
  getBreadcrumbSchema(breadcrumbs),
  getArticleSchema({ title, description, url: `/states/${slug}`, datePublished, dateModified }),
  ...(faqs?.length ? [getFAQSchema(faqs)] : []),
].filter(Boolean);
---
<BaseLayout title={`${title} | HealthInsuranceRenew`} description={description} schemas={schemas}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <Breadcrumbs items={breadcrumbs} />
    <h1 class="text-3xl sm:text-4xl font-bold text-neutral-900 leading-heading mb-4">{title}</h1>
    <div class="flex items-center gap-3 mb-4">
      <span class="inline-flex items-center px-3 py-1 rounded-full bg-federal-50 text-federal-700 text-sm font-medium">
        {stateAbbr}
      </span>
      <span class="inline-flex items-center px-3 py-1 rounded-full bg-neutral-100 text-neutral-600 text-sm">
        Exchange: {exchange}
      </span>
    </div>
    <LastUpdated date={dateModified} />
    <AnswerBox answer={description} />
    <div class="prose prose-slate max-w-none prose-headings:font-bold prose-headings:text-slate-900 prose-a:text-primary-600 hover:prose-a:text-primary-700 font-serif">
      <Content />
    </div>
    {faqs && faqs.length > 0 && <FAQSection faqs={faqs} />}

    <div class="bg-slate-50 border border-slate-200 rounded-2xl p-5 my-8">
      <h2 class="text-lg font-semibold text-slate-800 mb-3">Related Resources</h2>
      <ul class="space-y-2 text-sm">
        <li><a href={`/states/${slug}/aca-2026`} class="text-primary-600 hover:text-primary-700 underline">{stateName} ACA 2026 Detailed Guide</a></li>
        <li><a href="/eligibility-check" class="text-primary-600 hover:text-primary-700 underline">Do I Qualify for ACA Savings in 2026?</a></li>
        <li><a href="/fpl-2026" class="text-primary-600 hover:text-primary-700 underline">2026 Federal Poverty Level Guidelines</a></li>
        <li><a href="/csr-explained-2026" class="text-primary-600 hover:text-primary-700 underline">Cost-Sharing Reductions Explained</a></li>
        <li><a href="/aca-income-guide-2026" class="text-primary-600 hover:text-primary-700 underline">ACA Savings by Income Level</a></li>
        <li><a href="/tools/income-savings-calculator" class="text-primary-600 hover:text-primary-700 underline">Estimate Your Savings</a></li>
        <li><a href="/lost-job-health-insurance-2026" class="text-primary-600 hover:text-primary-700 underline">Lost Your Job? Your Options Explained</a></li>
      </ul>
    </div>

    <div class="mt-12 rounded-2xl bg-white border border-slate-200 shadow-sm p-8 sm:p-10 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-slate-900 leading-heading mb-6">
        Ready to Review Coverage Options in {stateName}?
      </h2>
      <a
        href="https://applyhealthinsuranceonline.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-3.5 rounded-xl bg-primary-600 hover:bg-primary-700 text-white font-semibold text-lg shadow-sm hover:shadow-md transition-all duration-200"
      >
        Continue to Licensed Enrollment
      </a>
      <p class="mt-4 text-sm text-slate-600 max-w-md mx-auto leading-relaxed">
        You are leaving HealthInsuranceRenew.com and entering a separate enrollment platform operated by licensed agents.
      </p>
    </div>

    <AuthorBio />
    <SourcesBox sources={[
      { title: 'Healthcare.gov', url: 'https://www.healthcare.gov/' },
      { title: `${stateName} Insurance Department`, url: 'https://www.healthcare.gov/marketplace-in-your-state/' },
    ]} />
  </article>
</BaseLayout>
