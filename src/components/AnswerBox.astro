---
interface Props {
  answer: string;
}
const { answer } = Astro.props;
---
<div class="bg-federal-50/60 backdrop-blur-sm border border-federal-200/60 rounded-2xl p-5 my-6">
  <p class="text-xs font-semibold text-federal-600 uppercase tracking-wider mb-1.5">TL;DR</p>
  <p class="text-neutral-800 leading-relaxed font-serif">{answer}</p>
</div>
