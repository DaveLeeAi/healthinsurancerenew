---
import config from '../data/config.json';
---
<header class="sticky top-0 z-40 bg-white/95 backdrop-blur-sm border-b border-neutral-200">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-2 text-primary-700 font-bold text-lg tracking-tight hover:text-primary-800 transition-colors">
        <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="8" fill="currentColor" fill-opacity="0.1"/>
          <path d="M16 6C10.48 6 6 10.48 6 16s4.48 10 10 10 10-4.48 10-10S21.52 6 16 6zm-1 15h-2v-2h2v2zm0-4h-2v-2h2v2zm4 4h-2v-2h2v2zm0-4h-2v-2h2v2zm0-4h-6v-2h6v2z" fill="currentColor"/>
        </svg>
        <span class="hidden sm:inline">HealthInsuranceRenew</span>
      </a>

      <div class="hidden md:flex items-center gap-6 text-sm font-medium text-neutral-600">
        <a href="/guides/individual-family-health-insurance" class="hover:text-primary-700 transition-colors">Guides</a>
        <a href="/tools" class="hover:text-primary-700 transition-colors">Tools</a>
        <a href="/states" class="hover:text-primary-700 transition-colors">States</a>
        <a href="/about" class="hover:text-primary-700 transition-colors">About</a>
        <a href="/contact" class="inline-flex items-center px-4 py-2 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors">
          Get Help
        </a>
      </div>

      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg text-neutral-600 hover:bg-neutral-100 transition-colors" aria-label="Open menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-neutral-100 mt-2 pt-4">
      <div class="flex flex-col gap-3 text-sm font-medium text-neutral-600">
        <a href="/guides/individual-family-health-insurance" class="hover:text-primary-700 transition-colors py-1">Guides</a>
        <a href="/tools" class="hover:text-primary-700 transition-colors py-1">Tools</a>
        <a href="/states" class="hover:text-primary-700 transition-colors py-1">States</a>
        <a href="/about" class="hover:text-primary-700 transition-colors py-1">About</a>
        <a href="/contact" class="inline-flex items-center justify-center px-4 py-2 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors mt-2">
          Get Help
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
