---
interface Props {
  name?: string;
  role?: string;
  bio?: string;
}
const {
  name = 'HealthInsuranceRenew Editorial Team',
  role = 'Licensed Insurance Professionals',
  bio = 'Our team of licensed insurance agents and editorial staff review all content for accuracy and compliance. We are committed to providing clear, unbiased educational information about health insurance options.',
} = Astro.props;
---
<div class="flex items-start gap-4 bg-white/70 backdrop-blur-sm border border-neutral-200/80 rounded-2xl p-5 my-6">
  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-navy-100 to-federal-100 text-navy-700 flex items-center justify-center shrink-0 font-semibold text-lg">
    {name.charAt(0)}
  </div>
  <div>
    <div class="flex items-center gap-2 flex-wrap">
      <p class="font-semibold text-neutral-900">{name}</p>
      <span class="text-[10px] font-semibold uppercase tracking-wider text-federal-600 bg-federal-50 px-2 py-0.5 rounded-full">Fact-Checked</span>
    </div>
    <p class="text-sm text-federal-600 mb-1">{role}</p>
    <p class="text-sm text-neutral-600 leading-relaxed font-serif">{bio}</p>
  </div>
</div>
