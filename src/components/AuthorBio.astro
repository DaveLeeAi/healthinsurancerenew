---
interface Props {
  name?: string;
  role?: string;
  bio?: string;
  linkedin?: string;
  npn?: string;
}
const {
  name = 'Dave Lee',
  role = 'Licensed Health Insurance Agent',
  bio = 'Dave Lee is a licensed health insurance agent (NPN: 7578729) serving clients in multiple U.S. states. Connect on LinkedIn.',
  linkedin = 'https://www.linkedin.com/in/daveleeai/',
  npn = '7578729',
} = Astro.props;
---
<div class="flex items-start gap-4 bg-white border border-slate-200 rounded-2xl p-5 my-6">
  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-slate-100 to-primary-100 text-slate-700 flex items-center justify-center shrink-0 font-semibold text-lg">
    {name.charAt(0)}
  </div>
  <div>
    <div class="flex items-center gap-2 flex-wrap">
      <p class="font-semibold text-slate-900">{name}</p>
      <span class="text-[10px] font-semibold uppercase tracking-wider text-trust-700 bg-trust-600/10 px-2 py-0.5 rounded-full">Fact-Checked</span>
    </div>
    <p class="text-sm text-primary-600 mb-1">{role}</p>
    {npn && <p class="text-xs text-slate-500 mb-1">NPN: {npn}</p>}
    <p class="text-sm text-slate-600 leading-relaxed font-serif">{bio}</p>
    {linkedin && (
      <a
        href={linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 text-sm text-primary-600 hover:text-primary-700 transition-colors mt-2"
      >
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        LinkedIn
      </a>
    )}
  </div>
</div>
