---
interface Props {
  items: string[];
}
const { items } = Astro.props;
---
<div class="bg-secondary-50 border border-secondary-200 rounded-lg p-5 my-6">
  <p class="text-sm font-semibold text-secondary-800 uppercase tracking-wider mb-3">Key Takeaways</p>
  <ul class="space-y-2">
    {items.map((item) => (
      <li class="flex items-start gap-2 text-neutral-700">
        <svg class="w-5 h-5 text-secondary-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</div>
